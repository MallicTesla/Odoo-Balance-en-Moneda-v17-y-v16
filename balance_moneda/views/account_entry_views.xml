<odoo>
    <record id="view_account_entry_tree" model="ir.ui.view">
        <field name="name">custom.account.entry.tree</field>
        <field name="model">custom.account.entry</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date"/>
                <field name="debit"/>
                <field name="credit"/>
                <field name="balance_currency"/>
            </tree>
        </field>
    </record>

    <record id="view_account_entry_form" model="ir.ui.view">
        <field name="name">custom.account.entry.form</field>
        <field name="model">custom.account.entry</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="debit"/>
                    <field name="credit"/>
                    <field name="balance_currency"/>
                </sheet>
            </form>
        </field>
    </record>
</odoo>

